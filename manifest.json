{
  "manifest_version": 3,
  "name": "OLED Screensaver",
  "version": "1.1.0",
  "description": "Auto-activating screensaver for OLED burn-in protection",
  "permissions": ["idle", "power", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "OLED Screensaver"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
